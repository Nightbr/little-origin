{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"workspaces": {
		".": {
			"entry": ["package.json"],
			"project": ["**/*.ts", "**/*.tsx"]
		},
		"apps/*": {
			"entry": ["src/index.ts", "src/main.tsx"],
			"project": ["src/**/*.ts", "src/**/*.tsx"]
		},
		"packages/*": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.ts"]
		}
	},
	"ignore": ["**/*.test.ts", "**/*.spec.ts", "**/*.config.js", "**/*.config.ts"]
}
