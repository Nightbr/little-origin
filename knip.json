{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"workspaces": {
		".": {
			"entry": ["package.json"]
		},
		"apps/api": {
			"entry": ["package.json"],
			"project": ["src/**/*.ts"]
		},
		"apps/web": {
			"entry": ["src/main.tsx"],
			"project": ["src/**/*.ts", "src/**/*.tsx"]
		},
		"packages/*": {
			"project": ["src/**/*.ts"]
		}
	},
	"ignore": [
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.config.js",
		"**/*.config.ts",
		"apps/web/src/routeTree.gen.ts",
		"apps/api/src/graphql/types.ts",
		"apps/api/src/context/request-context.ts",
		"apps/api/src/server.ts",
		"apps/api/src/utils/jwt.ts",
		"apps/web/src/hooks/useSwipeGesture.ts"
	],
	"ignoreBinaries": ["mise"],
	"ignoreDependencies": ["pino-pretty"]
}
